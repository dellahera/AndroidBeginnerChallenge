<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RegisterActivity">

    <EditText
            android:id="@+id/etFname"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:hint="@string/fname"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:autofillHints="" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.18"/>
    <EditText
            android:id="@+id/etEmaiil"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:maxLines="1"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/etFname"
            app:layout_constraintStart_toStartOf="@+id/etFname"
            app:layout_constraintBottom_toBottomOf="parent" android:autofillHints=""
            app:layout_constraintTop_toBottomOf="@+id/etFname" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:id="@+id/etUnit"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:hint="University/Organization"
            android:inputType="text"
            android:maxLines="1"
            android:autofillHints=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etEmaiil"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/etEmaiil"
            app:layout_constraintEnd_toEndOf="@+id/etEmaiil"/>
    <EditText
            android:id="@+id/etPassw"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:autofillHints=""
            app:layout_constraintTop_toBottomOf="@+id/etUnit" app:layout_constraintStart_toStartOf="@+id/etUnit"
            app:layout_constraintEnd_toEndOf="@+id/etUnit"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/etKPass"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:hint="Konfirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:autofillHints=""
            android:layout_marginBottom="392dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etPassw"
            app:layout_constraintEnd_toEndOf="@+id/etPassw" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/etPassw"/>
    <Button
            android:id="@+id/btnReg"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/colorAccent"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etKPass" android:layout_marginBottom="304dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintVertical_bias="0.155" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="143dp"
            android:layout_height="48dp"
            android:textSize="30dp"
            android:text="Register"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" tools:layout_editor_absoluteY="6dp"
            app:layout_constraintHorizontal_bias="0.209"/>
    <ImageView android:layout_width="36dp"
               android:layout_height="45dp"
               android:id="@+id/backID"
               android:src="@drawable/back"
               tools:layout_editor_absoluteY="6dp" tools:layout_editor_absoluteX="16dp"/>
</android.support.constraint.ConstraintLayout>